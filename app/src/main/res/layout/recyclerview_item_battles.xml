<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/rv_clancard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="4dp"
        android:layout_gravity="center_vertical">


        <LinearLayout
            android:id="@+id/rv_infoPlayerLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:background="@drawable/normal_grad">

                <TextView
                    android:id="@+id/rv_date"
                    style="@style/word_warlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/na"
                    android:textColor="#FFF" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/battle"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/rv_battles"
                    style="@style/word_warlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:text="@string/na"
                    android:textColor="#FFF" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/trophy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/rv_wins"
                    style="@style/word_warlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/na"
                    android:textColor="#FFF" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_close_24dp_red"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/rv_losses"
                    style="@style/word_warlog"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/na"
                    android:textColor="#FFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>