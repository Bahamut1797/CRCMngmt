<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardMaxElevation="8dp">

        <LinearLayout
            android:id="@+id/rc_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/normal_grad"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rv_iconclan"
                    android:contentDescription="@string/imgIconDesc"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rv_playername"
                        style="@style/word_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtPlayer"
                        android:textColor="#FFF"/>

                    <TextView
                        android:id="@+id/rv_playertag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTag"
                        android:textColor="#FFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/rv_playerrole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtRole"
                        android:textColor="#FFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="start|center_vertical">

                    <TextView
                        android:id="@+id/rv_playertrophies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTrophies"
                        android:textColor="#FFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/rv_playerdonations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtDonations"
                        android:textColor="#FFF"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end">

                    <TextView
                        android:id="@+id/rv_playerfails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtFails"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>